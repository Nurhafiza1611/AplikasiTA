<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome2"
    tools:context=".HomeActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="180dp">
    </androidx.fragment.app.FragmentContainerView>

    <Button
        android:id="@+id/fragmentIBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="262dp"
        android:backgroundTint="@color/ungu"
        android:fontFamily="@font/poppins_medium"
        android:minHeight="55dp"
        android:text="TOEFL iBT">
    </Button>

    <Button
        android:id="@+id/fragmentPBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="139dp"
        android:backgroundTint="@color/ungu"
        android:fontFamily="@font/poppins_medium"
        android:minHeight="55dp"
        android:text="TOEFL PBT">
    </Button>

    <Button
        android:id="@+id/fragmentITP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/ungu"
        android:fontFamily="@font/poppins_medium"
        android:minHeight="55dp"
        android:text="TOEFL ITP">
    </Button>

</RelativeLayout>